<Window
    x:Class="ExifGlass.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:eg="using:ExifGlass.ExifTools"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ExifGlass"
    Width="600"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{DynamicResource SystemAltMediumHighColor}"
    DragDrop.AllowDrop="True"
    FontFamily="Segoe UI"
    TransparencyBackgroundFallback="{DynamicResource ThemeBackgroundBrush}"
    TransparencyLevelHint="Mica"
    mc:Ignorable="d">

    <Grid RowDefinitions="*, Auto">
        <Border
            Name="TopContent"
            Grid.Row="0"
            Background="{DynamicResource SystemAltMediumColor}">
            <Border
                Margin="15"
                BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                BorderThickness="1"
                CornerRadius="0 0 5 5">
                <DataGrid
                    Name="DtGrid"
                    x:DataType="eg:ExifTagItem"
                    AutoGenerateColumns="False"
                    IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Index}" Header="Index">
                            <DataGridTextColumn.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        FontSize="13"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource SystemBaseMediumHighColor}">
                                        No.
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTextColumn.HeaderTemplate>
                        </DataGridTextColumn>

                        <DataGridTextColumn Binding="{Binding Name}" Header="Name">
                            <DataGridTextColumn.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        FontSize="13"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource SystemBaseMediumHighColor}">
                                        Tag name
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTextColumn.HeaderTemplate>
                        </DataGridTextColumn>

                        <DataGridTextColumn Binding="{Binding Value}" Header="Value">
                            <DataGridTextColumn.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        FontSize="13"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource SystemBaseMediumHighColor}">
                                        Tag value
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTextColumn.HeaderTemplate>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Border>



        <StackPanel
            Name="Footer"
            Grid.Row="1"
            Margin="15,15,15,15"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Orientation="Vertical">
            <TextBox
                Name="TxtCmd"
                Height="60"
                Margin="0,0,0,15"
                BorderThickness="0"
                Classes="txt"
                IsReadOnly="True"
                SelectionBrush="{DynamicResource SelectionColorBrush}"
                TextWrapping="Wrap" />

            <Grid ColumnDefinitions="*, Auto, Auto, Auto">
                <Button
                    Name="BtnOpenFile"
                    Grid.Column="0"
                    Background="{DynamicResource AccentButtonBackground}"
                    Classes="accent">
                    Open file...
                </Button>


                <Button
                    Name="BtnCopy"
                    Grid.Column="1"
                    Margin="10,0,0,0"
                    IsEnabled="False">
                    Copy selected value
                </Button>
                <DropDownButton
                    Name="BtnExport"
                    Grid.Column="2"
                    Margin="10,0,0,0"
                    Content="Export..."
                    IsEnabled="False">
                    <DropDownButton.Flyout>
                        <MenuFlyout>
                            <MenuItem Name="MnuExportText" Header="Text file" />
                            <MenuItem Name="MnuExportCsv" Header="CSV file" />
                            <MenuItem Name="MnuExportJson" Header="JSON file" />
                        </MenuFlyout>
                    </DropDownButton.Flyout>

                </DropDownButton>
                <Button
                    Name="BtnSettings"
                    Grid.Column="3"
                    Margin="10,0,0,0"
                    Classes="btn">
                    Settings...
                </Button>
            </Grid>
        </StackPanel>
    </Grid>

</Window>
